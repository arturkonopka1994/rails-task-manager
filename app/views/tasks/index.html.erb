<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed == true  %>
      <input type="checkbox" name="" id="" checked>
    <% else %>
      <input type="checkbox" name="" id="" >
    <% end %>
    <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to 'Create new task', tasks_new_path %>
</div>
